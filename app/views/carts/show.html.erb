<h1>my cart :</h1>
	<% @cart.items.each do |item| %>
			<%= image_tag(item.image_url, size: '150', alt: 'my picture') %>
		    <h3><%= item.title %></h3>
		    <p>Price : <%= item.price %> $</p>
			<p><%= button_to "Retirer du panier", action: 'destroy_item', id: @cart.id, item: item.id %></p>
	<% end %> 
